<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_order_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_color_ee">

    <RelativeLayout
        android:id="@+id/activity_detail_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_alignParentBottom="true"
        android:background="@color/red_color_f93448">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@mipmap/sign_up_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="马上报名"
                android:textColor="@color/white_color"
                android:textSize="@dimen/textsize_16" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_detail_bottom_layout"
        android:orientation="vertical">

        <com.dopstore.mall.view.scrollview.DetailMenu
            android:id="@+id/activity_detail_content_ly"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.dopstore.mall.view.scrollview.YsnowScrollViewPageOne
                    android:id="@+id/activity_detail_title_ysnowpage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_color_ee"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/activity_detail_title_image"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:contentDescription="@null"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white_color"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/activity_detail_title_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="45dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginTop="15dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="2"
                                android:textColor="@color/gray_color_33"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/activity_detail_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/red_color_f93448"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/activity_detail_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:padding="10dp"
                                android:background="@drawable/shape_grey_corner_all"
                                android:textColor="@color/white_color"
                                android:textSize="10sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp">

                                <View
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:background="@mipmap/time_detail_logo" />

                                <TextView
                                    android:id="@+id/activity_detail_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="2016年"
                                    android:textColor="@color/gray_color_66"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="27dp"
                                android:background="@color/gray_color_ee" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp">

                                <View
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:background="@mipmap/age_detail_logo" />

                                <TextView
                                    android:id="@+id/activity_detail_age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/gray_color_66"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="27dp"
                                android:background="@color/gray_color_ee" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp">

                                <View
                                    android:id="@+id/activity_detail_address_logo"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:layout_centerVertical="true"
                                    android:background="@mipmap/address_detail_logo" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:layout_toRightOf="@id/activity_detail_address_logo"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/activity_detail_address"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:textColor="@color/gray_color_66"
                                        android:textSize="14sp" />
                                    <TextView
                                        android:id="@+id/activity_detail_shop_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:textColor="@color/gray_color_66"
                                        android:textSize="14sp" />

                                </LinearLayout>

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="27dp"
                                android:background="@color/gray_color_ee" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp">

                                <View
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:background="@mipmap/phone_detail_logo" />

                                <TextView
                                    android:id="@+id/activity_detail_phone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/gray_color_66"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/activity_detail_about_shop_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@color/white_color"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:gravity="center"
                                android:text="相关活动商品"
                                android:textColor="@color/gray_color_33"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@color/gray_color_ee" />

                            <com.dopstore.mall.view.EScrollView
                                android:id="@+id/activity_detail_about_scrollview"
                                android:layout_width="match_parent"
                                android:minHeight="100dp"
                                android:paddingLeft="10dp"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/gray_color_ee"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="13dp"
                                    android:layout_height="15dp"
                                    android:background="@mipmap/up_arrow" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="上拉查看图文详情"
                                    android:textColor="@color/gray_color_66"
                                    android:textSize="14sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.dopstore.mall.view.scrollview.YsnowScrollViewPageOne>

                <com.dopstore.mall.view.scrollview.YsnowScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ripple_material_dark"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1400dp" />

                    </LinearLayout>


                </com.dopstore.mall.view.scrollview.YsnowScrollView>

            </LinearLayout>

        </com.dopstore.mall.view.scrollview.DetailMenu>

    </LinearLayout>


    <include
        android:id="@+id/activity_order_title_layout"
        layout="@layout/common_title" />


</RelativeLayout>

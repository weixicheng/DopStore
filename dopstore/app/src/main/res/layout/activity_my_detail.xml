<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_detail_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">

    <include
        android:id="@+id/my_detail_top_layout"
        layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_detail_top_layout"
        android:background="@color/white_color"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/my_detail_head_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:textColor="@color/gray_color_99"
                    android:textSize="@dimen/textsize_14" />

                <View
                    android:id="@+id/my_detail_head_right"
                    android:layout_width="7dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/right_arrow" />

                <com.dopstore.mall.view.CircleImageView
                    android:id="@+id/my_detail_head_image"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_toLeftOf="@id/my_detail_head_right"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/me_icon"
                    app:border_color="@color/white_color"
                    app:border_width="2dp"  />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@color/gray_color_ee" />

            <RelativeLayout
                android:id="@+id/my_detail_nick_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="昵称"
                    android:textColor="@color/gray_color_99"
                    android:textSize="@dimen/textsize_14" />

                <View
                    android:id="@+id/my_detail_nick_right"
                    android:layout_width="7dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/right_arrow" />

                <TextView
                    android:id="@+id/my_detail_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_toLeftOf="@id/my_detail_nick_right"
                    android:textColor="@color/gray_color_33"
                    android:textSize="@dimen/textsize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@color/gray_color_ee" />

            <RelativeLayout
                android:id="@+id/my_detail_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="手机号码"
                    android:textColor="@color/gray_color_99"
                    android:textSize="@dimen/textsize_14" />

                <View
                    android:id="@+id/my_detail_phone_right"
                    android:layout_width="7dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/right_arrow" />

                <TextView
                    android:id="@+id/my_detail_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_toLeftOf="@id/my_detail_phone_right"
                    android:textColor="@color/gray_color_33"
                    android:textSize="@dimen/textsize_14" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_color_ee"
                android:padding="@dimen/margin_10"
                android:text="个人信息"
                android:textColor="@color/gray_color_99"
                android:textSize="@dimen/textsize_14" />

            <RelativeLayout
                android:id="@+id/my_detail_sex_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="性别"
                    android:textColor="@color/gray_color_99"
                    android:textSize="@dimen/textsize_14" />

                <View
                    android:id="@+id/my_detail_sex_right"
                    android:layout_width="7dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/right_arrow" />

                <TextView
                    android:id="@+id/my_detail_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_toLeftOf="@id/my_detail_sex_right"
                    android:textColor="@color/gray_color_33"
                    android:textSize="@dimen/textsize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@color/gray_color_ee" />

            <RelativeLayout
                android:id="@+id/my_detail_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="出生日期"
                    android:textColor="@color/gray_color_99"
                    android:textSize="@dimen/textsize_14" />

                <View
                    android:id="@+id/my_detail_date_right"
                    android:layout_width="7dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/right_arrow" />

                <TextView
                    android:id="@+id/my_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_toLeftOf="@id/my_detail_date_right"
                    android:textColor="@color/gray_color_33"
                    android:textSize="@dimen/textsize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@color/gray_color_ee" />

            <RelativeLayout
                android:id="@+id/my_detail_city_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="城市"
                    android:textColor="@color/gray_color_99"
                    android:textSize="@dimen/textsize_14" />

                <View
                    android:id="@+id/my_detail_city_right"
                    android:layout_width="7dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/right_arrow" />

                <TextView
                    android:id="@+id/my_detail_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_toLeftOf="@id/my_detail_city_right"
                    android:textColor="@color/gray_color_33"
                    android:textSize="@dimen/textsize_14" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_color_ee"
                android:padding="@dimen/margin_10"
                android:text="孩子信息"
                android:textColor="@color/gray_color_99"
                android:textSize="@dimen/textsize_14" />

            <RelativeLayout
                android:id="@+id/my_detail_baby_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="宝宝姓名"
                    android:textColor="@color/gray_color_99"
                    android:textSize="@dimen/textsize_14" />

                <View
                    android:id="@+id/my_detail_baby_right"
                    android:layout_width="7dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/right_arrow" />

                <TextView
                    android:id="@+id/my_detail_baby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_toLeftOf="@id/my_detail_baby_right"
                    android:textColor="@color/gray_color_33"
                    android:textSize="@dimen/textsize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@color/gray_color_ee" />

            <RelativeLayout
                android:id="@+id/my_detail_babysex_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="宝宝性别"
                    android:textColor="@color/gray_color_99"
                    android:textSize="@dimen/textsize_14" />

                <View
                    android:id="@+id/my_detail_babysex_right"
                    android:layout_width="7dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/right_arrow" />

                <TextView
                    android:id="@+id/my_detail_babysex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_toLeftOf="@id/my_detail_babysex_right"
                    android:textColor="@color/gray_color_33"
                    android:textSize="@dimen/textsize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@color/gray_color_ee" />

            <RelativeLayout
                android:id="@+id/my_detail_babydate_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="宝宝生日"
                    android:textColor="@color/gray_color_99"
                    android:textSize="@dimen/textsize_14" />

                <View
                    android:id="@+id/my_detail_babydate_right"
                    android:layout_width="7dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/right_arrow" />

                <TextView
                    android:id="@+id/my_detail_babydate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_toLeftOf="@id/my_detail_babydate_right"
                    android:textColor="@color/gray_color_33"
                    android:textSize="@dimen/textsize_14" />
            </RelativeLayout>

            <Button
                android:id="@+id/my_detail_save_bt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_margin="@dimen/margin_20"
                android:background="@drawable/square_corners_red_bg"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white_color"
                android:textSize="@dimen/textsize_16" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/my_detail_poup_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_below="@id/my_detail_top_layout"
        android:background="@drawable/darkening_background" />
</RelativeLayout>

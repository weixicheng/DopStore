<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:background="@color/gray_color_ee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_30"
        android:orientation="vertical">

        <include layout="@layout/common_title" />


        <RelativeLayout
            android:id="@+id/setting_my_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            android:layout_marginTop="@dimen/margin_10"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="我的资料"
                android:textColor="@color/gray_color_33"
                android:textSize="@dimen/textsize_14" />

            <View
                android:layout_width="7dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@color/gray_color_ee" />

        <RelativeLayout
            android:id="@+id/setting_my_safe_layout"
            android:layout_width="match_parent"
            android:background="@color/white_color"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="账号与安全"
                android:textColor="@color/gray_color_33"
                android:textSize="@dimen/textsize_14" />

            <View
                android:layout_width="7dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@color/gray_color_ee" />

        <RelativeLayout
            android:id="@+id/setting_my_address_layout"
            android:layout_width="match_parent"
            android:background="@color/white_color"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="收货地址"
                android:textColor="@color/gray_color_33"
                android:textSize="@dimen/textsize_14" />

            <View
                android:layout_width="7dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@color/gray_color_ee" />

        <RelativeLayout
            android:id="@+id/setting_my_msg_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="消息通知"
                android:textColor="@color/gray_color_33"
                android:textSize="@dimen/textsize_14" />

            <View
                android:layout_width="7dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@color/gray_color_ee" />

        <RelativeLayout
            android:id="@+id/setting_my_advice_layout"
            android:layout_width="match_parent"
            android:background="@color/white_color"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="意见反馈"
                android:textColor="@color/gray_color_33"
                android:textSize="@dimen/textsize_14" />

            <View
                android:layout_width="7dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@color/gray_color_ee" />

        <RelativeLayout
            android:id="@+id/setting_my_help_layout"
            android:layout_width="match_parent"
            android:background="@color/white_color"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="帮助中心"
                android:textColor="@color/gray_color_33"
                android:textSize="@dimen/textsize_14" />

            <View
                android:layout_width="7dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@color/gray_color_ee" />

        <RelativeLayout
            android:id="@+id/setting_my_clean_layout"
            android:layout_width="match_parent"
            android:background="@color/white_color"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="清理缓存"
                android:textColor="@color/gray_color_33"
                android:textSize="@dimen/textsize_14" />

            <View
                android:id="@+id/setting_my_clean_right"
                android:layout_width="7dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/right_arrow" />

            <TextView
                android:id="@+id/setting_my_clean_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_toLeftOf="@id/setting_my_clean_right"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_color_99"
                android:textSize="@dimen/textsize_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@color/gray_color_ee" />

        <RelativeLayout
            android:id="@+id/setting_my_good_layout"
            android:layout_width="match_parent"
            android:background="@color/white_color"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="亲,给个好评吧"
                android:textColor="@color/gray_color_33"
                android:textSize="@dimen/textsize_14" />

            <View
                android:layout_width="7dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray_color_ee" />

        <RelativeLayout
            android:id="@+id/setting_my_about_layout"
            android:layout_width="match_parent"
            android:background="@color/white_color"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="关于小海囤"
                android:textColor="@color/gray_color_33"
                android:textSize="@dimen/textsize_14" />

            <View
                android:layout_width="7dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/right_arrow" />
        </RelativeLayout>

        <Button
            android:id="@+id/setting_my_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/square_corners_red_bg"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16" />

    </LinearLayout>
</ScrollView>

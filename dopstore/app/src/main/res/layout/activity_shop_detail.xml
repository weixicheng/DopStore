<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_detail_main_layout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_color_ee"
    android:layout_height="match_parent">


    <include
        android:id="@+id/shop_detail_title_layout"
        layout="@layout/common_title" />

    <LinearLayout
        android:id="@+id/shop_detail_bottom_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/margin_50">

        <RelativeLayout
            android:id="@+id/shop_detail_main_bt"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/shop_detail_main_image"
                android:layout_width="19dip"
                android:layout_height="19dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7.0dip"
                android:background="@mipmap/home_logo"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/shop_detail_main_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_detail_main_image"
                android:gravity="center_horizontal"
                android:text="首页"
                android:textColor="@color/gray_color_66"
                android:textSize="@dimen/textsize_10" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shop_detail_shop_bt"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/shop_detail_shop_image"
                android:layout_width="19dip"
                android:layout_height="19dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7.0dip"
                android:background="@mipmap/shop_normal"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/shop_detail_shop_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_detail_shop_image"
                android:gravity="center_horizontal"
                android:text="购物车"
                android:textColor="@color/gray_color_66"
                android:textSize="@dimen/textsize_10" />
        </RelativeLayout>

        <TextView
            android:id="@+id/shop_detail_join_bt"
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/gray_color_66"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:id="@+id/shop_detail_once_bt"
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/red_color_f93448"
            android:text="立即下单"
            android:textColor="@color/white_color"
            android:textSize="@dimen/textsize_14" />

    </LinearLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_above="@id/shop_detail_bottom_layout"
        android:layout_below="@id/shop_detail_title_layout"
        android:layout_height="match_parent"
        android:id="@+id/shop_detail_web" />

    <View
        android:id="@+id/shop_detail_service_bt"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_alignParentRight="true"
        android:background="@mipmap/kefu_logo" />

    <LinearLayout
        android:id="@+id/shop_detail_poup_bg"
        android:layout_below="@id/shop_detail_title_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/darkening_background" />


</RelativeLayout>

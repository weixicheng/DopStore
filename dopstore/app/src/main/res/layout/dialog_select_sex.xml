<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_corner_all_selector"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_16"
        android:textColor="@color/red_color_f93448"
        android:padding="@dimen/margin_10"
        android:gravity="center"
        android:text="请选择性别" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_color_ee" />

    <TextView
        android:id="@+id/dialog_select_man"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_14"
        android:textColor="@color/gray_color_33"
        android:padding="@dimen/margin_10"
        android:gravity="center"
        android:text="男" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_color_ee" />

    <TextView
        android:id="@+id/dialog_select_woman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_14"
        android:textColor="@color/gray_color_33"
        android:padding="@dimen/margin_10"
        android:gravity="center"
        android:text="女" />
</LinearLayout>

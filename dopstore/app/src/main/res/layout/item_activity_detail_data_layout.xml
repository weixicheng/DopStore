<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/item_activity_detail_data_image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_activity_detail_data_title"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="@dimen/margin_10"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/gray_color_33"
        android:textSize="@dimen/textsize_12" />

    <TextView
        android:id="@+id/item_activity_detail_data_price"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_10"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/red_color_f93448"
        android:textSize="@dimen/textsize_13" />

</LinearLayout>

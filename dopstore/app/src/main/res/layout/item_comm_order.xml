<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_color_ee"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10">

        <ImageView
            android:id="@+id/comm_order_image"
            android:layout_width="91dp"
            android:padding="@dimen/margin_10"
            android:background="@drawable/square_hollow_gray_ee_bg"
            android:layout_height="91dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/comm_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/comm_order_image"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@id/comm_order_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/gray_color_33"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:id="@+id/comm_order_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/comm_order_title"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@id/comm_order_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/gray_color_33"
            android:textSize="@dimen/textsize_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/comm_order_image"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@id/comm_order_image">

            <TextView
                android:id="@+id/comm_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:textColor="@color/red_color_f93448"
                android:textSize="@dimen/textsize_12" />

            <TextView
                android:id="@+id/comm_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:textColor="@color/red_color_f93448"
                android:textSize="@dimen/textsize_12" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_bottom_main_layout"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_bottom_data_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/square_hollow_gray_ee_bg"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/main_bottom_data_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignRight="@id/main_bottom_data_image"
            android:layout_alignLeft="@id/main_bottom_data_image"
            android:layout_below="@id/main_bottom_data_image"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/gray_color_33"
            android:textSize="@dimen/textsize_12" />

        <TextView
            android:id="@+id/main_bottom_data_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/main_bottom_data_title"
            android:layout_alignLeft="@id/main_bottom_data_title"
            android:layout_below="@id/main_bottom_data_title"
            android:ellipsize="end"
            android:singleLine="true"
            android:paddingBottom="@dimen/margin_10"
            android:textColor="@color/red_color_f93448"
            android:textSize="@dimen/textsize_13" />
    </RelativeLayout>

    <View
        android:id="@+id/main_bottom_data_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_color_ee" />

</LinearLayout>

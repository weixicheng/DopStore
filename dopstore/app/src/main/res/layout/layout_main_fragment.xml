<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_main_top_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_title" />

        <com.dopstore.mall.view.EScrollView
            android:id="@+id/fragment_main_tab_escrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <com.dopstore.mall.view.view.PullToRefreshView
        android:id="@+id/fragment_main_pulltorefreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_main_top_ly"
        android:background="@color/gray_color_ee"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/fragment_main_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_color_ee"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/main_first_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/margin_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include layout="@layout/common_advertisement" />
                    </LinearLayout>

                    <com.dopstore.mall.view.MyListView
                        android:id="@+id/main_middle_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:divider="@color/gray_color_ee"
                        android:dividerHeight="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/main_bottom_title_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@color/white_color"
                            android:paddingBottom="@dimen/margin_20"
                            android:paddingTop="@dimen/margin_20"
                            android:text="热门推荐"
                            android:textColor="@color/gray_color_33"
                            android:textSize="@dimen/textsize_16" />

                        <com.dopstore.mall.view.MyGridView
                            android:id="@+id/main_bottom_gridView"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_10"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_height="wrap_content"
                            android:horizontalSpacing="10dp"
                            android:numColumns="2"
                            android:verticalSpacing="10dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_other_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.dopstore.mall.view.MyGridView
                        android:id="@+id/main_content_gridview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:horizontalSpacing="10dp"
                        android:numColumns="2"
                        android:scrollbars="none"
                        android:verticalSpacing="10dp" />

                </LinearLayout>
            </LinearLayout>

        </ScrollView>


    </com.dopstore.mall.view.view.PullToRefreshView>


</RelativeLayout>

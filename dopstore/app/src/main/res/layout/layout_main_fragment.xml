<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myRefresh="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_main_top_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_title" />

        <com.dopstore.mall.view.EScrollView
            android:id="@+id/fragment_main_tab_escrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <com.dopstore.mall.view.PullToRefreshView
        android:layout_below="@id/fragment_main_top_ly"
        android:id="@+id/fragment_main_pulltorefreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        myRefresh:pullDown="true"
        myRefresh:pullUp="true">

        <ListView
            android:id="@+id/main_content_listView"
            android:layout_width="match_parent"
            android:divider="@color/gray_color_ee"
            android:dividerHeight="10dp"
            android:scrollbars="none"
            android:layout_height="match_parent" />

    </com.dopstore.mall.view.PullToRefreshView>

    <com.dopstore.mall.view.PullToRefreshView
        android:layout_below="@id/fragment_main_top_ly"
        android:id="@+id/fragment_main_gw_pulltorefreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        myRefresh:pullDown="true"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone"
        myRefresh:pullUp="true">

        <GridView
            android:id="@+id/main_content_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:verticalSpacing="10dp" />

    </com.dopstore.mall.view.PullToRefreshView>


</RelativeLayout>

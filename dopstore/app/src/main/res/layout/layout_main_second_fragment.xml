<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myRefresh="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.dopstore.mall.view.PullToRefreshView
        android:id="@+id/main_second_fragmen_pulltorefreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        myRefresh:pullDown="true"
        myRefresh:pullUp="true"
        android:background="@color/gray_color_ee"
        android:orientation="vertical">

        <GridView
            android:id="@+id/main_second_fragment_gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:overScrollMode="never"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="10dp" />
    </com.dopstore.mall.view.PullToRefreshView>

</LinearLayout>

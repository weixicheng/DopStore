<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="3.0dip">

    <!-- 首页按钮 -->

    <RelativeLayout
        android:id="@+id/main_tab_button"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/main_tab_image"
            android:layout_width="19dip"
            android:layout_height="19dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7.0dip"
            android:background="@mipmap/main_press"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/main_tab_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_tab_image"
            android:gravity="center_horizontal"
            android:text="商城"
            android:textColor="@color/red_color_f93448"
            android:textSize="@dimen/textsize_10" />
    </RelativeLayout>

    <!-- 活动按钮 -->

    <RelativeLayout
        android:id="@+id/billing_tab_button"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginTop="7.0dip"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/billing_tab_image"
            android:layout_width="18dip"
            android:layout_height="20dip"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/activity_normal"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/billing_tab_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/billing_tab_image"
            android:gravity="center_horizontal"
            android:text="活动"
            android:textColor="@color/gray_color_33"
            android:textSize="@dimen/textsize_10" />
    </RelativeLayout>

    <!-- 购物车 -->

    <RelativeLayout
        android:id="@+id/head_tab_button"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginTop="7.0dip"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/head_tab_image"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/shop_normal"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/head_tab_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head_tab_image"
            android:gravity="center_horizontal"
            android:text="购物车"
            android:textColor="@color/gray_color_33"
            android:textSize="@dimen/textsize_10" />
    </RelativeLayout>

    <!-- 我的 -->

    <RelativeLayout
        android:id="@+id/my_tab_button"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginTop="7.0dip"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/my_tab_image"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/person_normal"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/my_tab_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_tab_image"
            android:gravity="center_horizontal"
            android:text="我的"
            android:textColor="@color/gray_color_33"
            android:textSize="@dimen/textsize_10" />
    </RelativeLayout>

</LinearLayout>